<h1>Categories</h1>
@if (@Model.Count == 0)
{
  <h3>No categories have been added yet!</h3>
}
<ul>
@foreach (var category in Model)
{
  <li><h3><a href='/categories/@category.GetId()'>@category.GetName()</a> | <a href="/category/edit/@category.GetId()">Edit</a> | <a href="/category/delete/@category.GetId()">Delete</a></h3></li>
}
</ul>
<p><a href='/categories/new'>Add a new category</a></p>
<p><a href="/">Return home</a></p>
